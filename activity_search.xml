<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search"
    android:background="#E2F4FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="430dp"
        android:orientation="vertical"
        android:background="#88e2f5"
        tools:context=".Search">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Browse Categories"
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            ></TextView>

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/entre"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/pg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />


        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/edu"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_marginTop="490dp"
        android:orientation="vertical"
        tools:context=".Search">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Entrepreneurship"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginLeft="60dp"
        ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Personal Growth"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:text="Education"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="60dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        tools:context=".Search">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="158dp"
            android:src="@drawable/corner" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        tools:context=".Search">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#1589a1"
            ></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="20dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/homeiconidle" />


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/searchicon" />


        <ImageView
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/circle" />


        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/chaticonidle" />


        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-8dp"
            android:src="@drawable/profileiconidle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/addicon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        tools:context=".Search">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20dp"
            android:textColor="#246155"
        ></TextView>


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"
            android:textColor="@color/white"
            ></TextView>


        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="vertical"
        tools:context=".Search">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_icon1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Let's Find.."
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            ></TextView>


        <EditText
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Search"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#738085"
            android:background="@drawable/login_rectangle"
            ></EditText>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Recent Searches"
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Mentor 1"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Mentor 2"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            ></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Mentor 3"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="290dp"
        tools:context=".Search">

    <ImageView
        android:id="@+id/cross1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/cross"
        android:layout_marginLeft="10dp"
        />

        <ImageView
            android:id="@+id/cross2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/cross"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:id="@+id/cross3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/cross"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>