<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"
    android:background="#E2F4FA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="horizontal"
        tools:context=".ResetPassword">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_icon1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#E2F4FA"
            android:fontFamily="sans-serif"
            android:text="Chats"
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        tools:context=".ResetPassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My community"
            android:textSize="20dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        tools:context=".ResetPassword">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/johnny"
        android:layout_marginLeft="0dp"
        />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/johnny"
            android:layout_marginLeft="20dp"
            />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/johnny"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        tools:context=".ResetPassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Messages"
            android:textSize="20dp"
            ></TextView>


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/johnny"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:id="@+id/chatMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:background="#E2F4FA"
            android:fontFamily="sans-serif"
            android:text="John Cooper"
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        tools:context=".Search">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#1589a1"
            ></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="20dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/homeiconidle" />


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/searchiconidle" />


        <ImageView
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/circle" />


        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/chaticon" />


        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-8dp"
            android:src="@drawable/profileiconidle" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/addicon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        tools:context=".Search">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="20dp"
            android:textColor="@color/white"
            ></TextView>


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>