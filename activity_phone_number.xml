<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneNumber"
    android:background="#E2F4FA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        tools:context=".PhoneNumber">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_icon1"
            android:layout_marginTop="40dp"
            android:layout_marginRight="170dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#E2F4FA"
            android:fontFamily="sans-serif"
            android:text="Verify your phone number"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="150dp"
        tools:context=".PhoneNumber">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We've sent a code to "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+92 321 2242022"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|left"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        tools:context=".PhoneNumber">

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_boundary1"
            android:inputType="number"
            android:textAlignment="center"
            ></EditText>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        tools:context=".PhoneNumber">

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_boundary1"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></EditText>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_boundary1"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></EditText>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_boundary1"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></EditText>

        <EditText
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_boundary1"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".PhoneNumber">

        <Button
            android:id="@+id/verified"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:text="Verify"
            android:backgroundTint="#1589a1"
            android:textSize="20dp"
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="0dp"
            ></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="vertical"
            tools:context=".PhoneNumber">

            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backspace"></TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp"
        tools:context=".PhoneNumber">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send code again in "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:background="#6ac7eb"
        android:layout_marginTop="400dp"
        tools:context=".PhoneNumber">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            ></TextView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:background="#6ac7eb"
        android:layout_marginTop="480dp"
        tools:context=".PhoneNumber">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            ></TextView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:background="#6ac7eb"
        android:layout_marginTop="560dp"
        tools:context=".PhoneNumber">

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:background="@drawable/numberkeys"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            ></TextView>
    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#6ac7eb"
        android:layout_marginTop="630dp"
        tools:context=".PhoneNumber">

    <TextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background="@drawable/numberkeys"
        android:layout_marginLeft="10dp"
        ></TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>