<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPassword"
    android:background="#E2F4FA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="vertical"
        tools:context=".ResetPassword">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_icon1"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#E2F4FA"
            android:fontFamily="sans-serif"
            android:text="Forgot Password?"
            android:textAlignment="viewStart"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t worry! It happens. Please enter the email associated with your account. "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            ></TextView>

        <EditText
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Enter new password"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#738085"
            android:background="@drawable/login_rectangle"
            ></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            ></TextView>

        <EditText
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="Re-enter password"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#738085"
            android:background="@drawable/login_rectangle"
            ></EditText>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            android:text="Reset Password"
            android:textSize="20dp"
            android:textAlignment="center"
            android:backgroundTint="#1589a1"
            android:textColor="@color/white"
            android:id="@+id/backToLogin"
            ></Button>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="520dp"
        tools:context=".ResetPassword">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't want to reset password? "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/loginAgainHehe"
            ></TextView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>