<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="#E2F4FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        tools:context=".Login">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="158dp"
            android:src="@drawable/corner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:background="#E2F4FA"
            ></LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        tools:context=".Login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mentor"
            android:text="mentor"
            android:textColor="#1589a1"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="50dp"
            android:layout_marginTop="100dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me"
            android:text="me"
            android:textColor="#ebc934"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif"
            android:background="#E2F4FA"
            android:textSize="50dp"
            android:layout_marginTop="100dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left|top"
        tools:context=".Login"
        android:background="@drawable/login_rectangle"
        android:backgroundTint="#6ac7eb"
        android:layout_marginTop="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            ></TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="Enter Email"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#738085"
            android:background="@drawable/login_rectangle"
            android:inputType="textEmailAddress"
            ></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            ></TextView>

        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:text="Enter your password"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#738085"
            android:background="@drawable/login_rectangle"
            ></EditText>

        <TextView
            android:id="@+id/forgotPasswordLink"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Forgot your password?"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="viewEnd"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            ></TextView>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:text="Login"
            android:textSize="20dp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textColor="#6ac7eb"
            android:id="@+id/loginButton"
            ></Button>

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal"
        tools:context=".Login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Don't have an account?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="0dp"
            ></TextView>

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textColor="#1589a1"
            android:textSize="15dp"
            android:layout_marginTop="680dp"
            android:layout_marginLeft="5dp"
            ></TextView>

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
