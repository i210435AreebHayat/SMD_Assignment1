<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#E2F4FA">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        tools:context=".Search">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#1589a1"
            ></TextView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="20dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/homeiconidle" />


        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/searchiconidle" />


        <ImageView
            android:id="@+id/circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/circle" />


        <ImageView
            android:id="@+id/chatIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/chaticonidle" />


        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-8dp"
            android:src="@drawable/profileicon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|center"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="5dp"
        tools:context=".Search">


        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/addicon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|left"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        tools:context=".Search">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textSize="20dp"
            android:textColor="#246155"
            ></TextView>


        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20dp"
            android:textColor="@color/white"
            ></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|left"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        tools:context=".PhoneNumber">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/back_icon1"
            android:layout_marginTop="30dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:background="#E2F4FA"
            android:fontFamily="sans-serif"
            android:text="My Profile"
            android:textColor="#1589a1"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>


    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="550dp"
        tools:context=".Home"
        android:background="#073763">

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="400dp"
        android:layout_marginLeft="20dp"
        tools:context=".Home">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginTop="60dp"
            app:tint="#1589a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Ali"
            android:textColor="#1589a1"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            ></TextView>

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="250dp"
        tools:context=".Home">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Mentors for you"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="150dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="280dp"
        tools:context=".Home">

        <TextView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/numberkeys"
            android:backgroundTint="#edd8dc"
            ></TextView>

        <TextView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/numberkeys"
            android:backgroundTint="#edd8dc"
            ></TextView>

        <TextView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/numberkeys"
            android:backgroundTint="#edd8dc"
            ></TextView>

        <TextView
            android:id="@+id/johnPage"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:text="John Cooper\n UX Designer @ Google"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="-410dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/login_rectangle"
            android:backgroundTint="@color/white"
            ></TextView>


        <TextView
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:text="Martina Watson\n Lead - Technology Officer"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/login_rectangle"
            android:backgroundTint="@color/white"
            ></TextView>

        <TextView
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:text="Emma\n Lead - Corporation"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/login_rectangle"
            android:backgroundTint="@color/white"
            ></TextView>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="420dp"
        tools:context=".Home">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Reviews"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="20dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="10dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="220dp"
            ></TextView>

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="460dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/john2" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>