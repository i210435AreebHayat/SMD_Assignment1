<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Photo"
    android:background="#E2F4FA">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        tools:context=".Home"
        android:background="#edd8dc">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/cross"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="HDR"
            ></TextView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            ></TextView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/brightness"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="620dp"
        android:layout_marginRight="25dp"
        tools:context=".Home">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Portrait "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:backgroundTint="#1589a1"
            android:textAlignment="center"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Slow-mo "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Video "
            android:textColor="#1589a1"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/topnav"
            android:textAlignment="center"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Photo "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Square "
            android:textColor="@color/black"
            android:fontFamily="sans-serif"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            ></TextView>

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="650dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/imageCircle1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1589a1"/>


        <ImageView
            android:id="@+id/imageCircle2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#1589a1"/>

        <ImageView
            android:id="@+id/imageCircle3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1589a1"/>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="660dp"
        tools:context=".Home">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/gallery"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|right"
        android:layout_marginTop="660dp"
        tools:context=".Home">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/camera"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="660dp"
        tools:context=".Home">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/whitecircle"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>