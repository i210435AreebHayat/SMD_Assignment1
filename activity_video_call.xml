<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Photo"
    android:background="#E2F4FA">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="150dp"
        tools:context=".Home"
        android:background="#edd8dc">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="John Cooper"
            android:textSize="30dp"
            android:textStyle="bold"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="50:08"
            android:textSize="20dp"
            android:textStyle="bold"
            ></TextView>


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/john"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>


    </LinearLayout>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|center"
        android:layout_marginTop="600dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/imageCircle1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1589a1"/>


        <ImageView
            android:id="@+id/imageCircle2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#1589a1"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/imageCircle3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/circle"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#1589a1"/>




    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="650dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/redCircle1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/redcircle"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="top|left"
        android:layout_marginTop="610dp"
        android:layout_marginRight="10dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/micoff"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/speaker"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/pause"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"/>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="650dp"
        tools:context=".Home">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/whitecross"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/white"/>



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>